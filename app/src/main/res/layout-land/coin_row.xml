<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:id="@+id/lay_one_row"
    android:layout_height="wrap_content">




            <TextView
                android:id="@+id/textView_coin_rank"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Rank"/>

            <TextView
                android:id="@+id/textView_coin_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Name" />

            <TextView
                android:id="@+id/textView_coin_symbol"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Symbol" />
            <TextView
                android:id="@+id/textView_coin_percentage"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="percentage" />

            <TextView
                android:id="@+id/textView_coin_usd_price"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="?attr/colorError" />

            <TextView
                android:id="@+id/textView_coin_cap"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Market cap" />


</LinearLayout>

